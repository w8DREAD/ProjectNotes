<h2 class="title">{{news}}</h2>

    {{#notes}}

        <form class="articles-news" name="news" method="post" id="post-{{id}}">
            <div class="notes">
                <p>
                    <a href="">{{tag}}</a>
                    <button type="submit" class="close button" data-dismiss="alert" aria-label="Close" name={{id}}>
                        <span aria-hidden="true" id="delete-{{id}}">&times;</span>
                    </button>
                    <button type="submit" class="like edit button" style="margin-right: 5px" data-dismiss="alert" aria-label="Close" name={{id}}>
                        <span aria-hidden="true" id="edit-{{id}}">✎</span>
                    </button>
                </p>

            </div>
            <div class="notes" style="margin-bottom: 15px" id="note-{{id}}">
                    {{text}}
            </div>




        <div class="collapse" id="collapseExample{{id}}">
            {{#comments}}
            <div class="articles-news comments">
               {{text}}<br>
                <span aria-hidden="true" style="float: right">{{author}}</span>
            </div>

            {{/comments}}

            <div class="input-group add-notes">
                <div class="input-group-prepend">
                    <button class="input-group-text" type="submit" form="add-{{id}}">Добавить</button>
                </div>
                <div type="tags" class="form-control" id="inputComment1" placeholder="напиши комментарий" name="add-{{id}}" contenteditable="true"></div>
            </div>
        </div>
            <div style="margin-top: 5px">
                <button type="submit" class="like" data-dismiss="alert" aria-label="Close" name="like">
                    <span style="color: red">&heartsuit; {{id}}</span>
                </button>
            <a data-toggle="collapse" href="#collapseExample{{id}}" role="button" aria-expanded="false"
               aria-controls="collapseExample{{id}}" style="font-size: 14px; float: right; padding-top: 10px; margin-right: 15px">
                комментарии
            </a>
            </div>
        </form>
    {{/notes}}


<h2 class="title">{{news}}</h2>

    {{#notes}}

        <form class="articles-news" name="news" id="post-{{id}}">
            <div class="notes">
                <p>
                    <a href="">{{tag}}</a>
                    <button type="submit" class="close button" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true" id="delete-{{id}}" name={{id}}>&times;</span>
                    </button>
                    <button type="submit" class="like edit button" style="margin-right: 5px" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true" id="edit-{{id}}" name={{id}}>✎</span>
                    </button>
                </p>

            </div>
            <div class="notes" style="margin-bottom: 15px" id="note-{{id}}">
                    {{text}}
            </div>
            <div class="notes" style="margin-bottom: 15px" id="info-note-{{id}}">
                Автор: {{author}} <br> Опубликовано: {{date}}
            </div>




        <div class="collapse" id="collapseExample-{{id}}">
            {{#comments}}
            <div class="articles-news comments">
               {{text}}<br>
                <span aria-hidden="true" style="float: right">{{author}}</span>
            </div>

            {{/comments}}

            <div class="input-group add-notes" id="add-notes-{{id}}">
                <div class="input-group-prepend">
                    <button class="input-group-text" type="button" name="{{id}}">Добавить</button>
                </div>
                <div type="tags" class="form-control" id="inputComment-{{id}}" placeholder="напиши комментарий" contenteditable="true"></div>
            </div>
        </div>
            <div style="margin-top: 5px">
                    <span class="like" type="button" style="color: red" name="{{id}}">&heartsuit; <p style="float: right; margin-left: 5px" name={{id}}>{{likes}}</p></span>
            <a data-toggle="collapse" href="#collapseExample-{{id}}" role="button" aria-expanded="false"
               aria-controls="collapseExample-{{id}}" style="font-size: 14px; float: right; padding-top: 10px; margin-right: 15px">
                комментарии
            </a>
            </div>
        </form>
    {{/notes}}

